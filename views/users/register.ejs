<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {style: 'form.css' }) %>

    <body>
        <!-- Header -->
        <%- include('../partials/header.ejs') %>
            <!-- Main -->
            <main>
                <div class="container">
                    <h1>Creá tu cuenta</h1>
                    <form class="form" action="" method="get">
                        <div>
                            <label for="name">Nombre completo</label>
                            <input type="text" name="name" id="name" placeholder="Luis Paredes" required>
                        </div>
                        <div>
                            <label for="direction">Direccion</label>
                            <input type="text" name="direction" id="direction" placeholder="Av. Siempreviva 1234" required>
                        </div>
                        <div>
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="ejemplo@gmail.com" required>
                        </div>
                        <div>
                            <label for="rol">Rol</label>
                            <select name="rol" id="rol">
                                <option value="comprador">Comprador</option>
                                <option value="vendedor">Vendedor</option>
                                <option value="cv">Compraventa</option>
                            </select>
                        </div>
                        <div>
                            <label for="password">Contraseña</label>
                            <input type="password" name="password" id="password" placeholder="Aa12345678" required>
                        </div>
                        <button type="submit">Iniciar sesión</button>
                    </form>
                </div>
            </main>
            <!-- Footer -->
            <%- include('../partials/footer.ejs') %>
                <!-- Scripts -->
                <%- include('../partials/scripts.ejs') %>
    </body>

</html>