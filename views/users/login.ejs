<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {style: 'form.css'}) %>
<body>
  <!-- Header -->
  <%- include('../partials/header.ejs') %>
  <!-- Main -->
   <main>
    <div class="container">
        <h1>Iniciar Sesión</h1>
        <form class="form" action="/users/login" method="post">
            <% if (error.msg.length > 0) { %>
             <small class="error"><%= error.msg %></small>
            <% } %>
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="ejemplo@gmail.com">   
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Aa12345678">   
            </div>
             <div>
                <label for="rememberme">Recuerdame</label>
                <input type="checkbox" name="rememberme" id="rememberme" >   
            </div>
            <button type="submit">Iniciar sesión</button>
            </form>
    </div>
   </main>  
  <!-- Footer -->
  <%- include('../partials/footer.ejs') %>
  <!-- Scripts -->
  <%- include('../partials/scripts.ejs') %>
</body>
</html>